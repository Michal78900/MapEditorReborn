{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "**.csproj",
            "**/*.cs"
          ]
        }
      ],
      "dest": "docfx/api"
    }
  ],
  "build": {
    "content": [
      {
        "src": "docfx/api",
        "files": [
          "*/**.yml",
          "*/**.md"
        ]
      },
      {
        "src": "docfx",
        "files": [
          "**/*.md", "**/*.yml"
        ]
      }
    ],
    "resource": [
      {
        "src": "docfx",
        "files": ["assets/**"]
      }
    ],
    "overwrite": [
      {
        "files": [
          "docfx/apidoc/**.md"
        ],
        "exclude": [
          "docfx/obj/**",
          "docfx/_site/**"
        ]
      }
    ],
    "dest": "_site",
    "globalMetadata": {
      "_appTitle": "MapEditorReborn - Docs",
      "_enableSearch": true,
      "_gitContribute": {
        "repo": "https://github.com/Michal78900/MapEditorReborn",
        "branch": "dev"
      },
      "_appLogoPath": "assets/Mer_Logo.png",
      "_appFaviconPath": "assets/Mer_Logo.ico"
    },
    "fileMetadataFiles": [],
    "template": [
      "default",
      "docfx/templates/darkfx"
    ],
    "markdownEngineName": "markdig"
  }
}
